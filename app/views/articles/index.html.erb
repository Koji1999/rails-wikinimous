<div class="container my-4">
  <div class="col-sm-6 offset-sm-3">
    <% @articles.each do |article| %>
      <div class="py-2">
        <h2 class="text-primary"><%= link_to article.title, article_path(article), class: "text-decoration-none" %></h2>
        <h5 class="fw-light"><%= article.content %></h5>
      </div>
    <% end %>
  </div>
</div>
